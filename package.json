{
  "name": "@sqrtthree/friday",
  "version": "0.8.1",
  "description": "Let every day be like Friday.",
  "main": "./dist/main.js",
  "types": "./index.d.ts",
  "bin": {
    "friday": "./dist/bin/friday.js",
    "friday-dev": "./dist/bin/friday-dev.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "prebuild": "npm run lint",
    "build": "rm -r dist && tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "npm run type-check && eslint --ext ts ./src",
    "lint-with-fix": "eslint --ext ts --fix ./src",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqrthree/friday.git"
  },
  "author": "sqrtthree <imsqrtthree@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sqrthree/friday/issues"
  },
  "homepage": "https://github.com/sqrthree/friday#readme",
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "dependencies": {
    "@koa/cors": "~3.1.0",
    "@koa/router": "^9.4.0",
    "ajv": "~6.12.5",
    "ajv-errors": "^1.0.1",
    "boxen": "^4.2.0",
    "chalk": "^4.1.0",
    "chokidar": "~3.4.2",
    "clipboardy": "~2.3.0",
    "config": "~3.3.1",
    "consola": "~2.15.0",
    "get-port": "^5.1.1",
    "glob": "~7.1.6",
    "ip": "^1.1.5",
    "koa": "~2.13.0",
    "koa-bodyparser": "~4.3.0",
    "koa-helmet": "^5.2.0",
    "koa-static": "^5.0.0",
    "lodash": "~4.17.20",
    "pino": "^6.6.1",
    "pino-pretty": "^4.2.1",
    "pretty-error": "^2.1.1",
    "pretty-ms": "^7.0.0",
    "uuid": "^8.3.0",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@sqrtthree/prettier-config": "^2.0.1",
    "@types/koa": "~2.11.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/lodash": "~4.14.161",
    "@types/node": "~14.11.1",
    "@types/yargs": "~15.0.5",
    "@typescript-eslint/eslint-plugin": "~4.1.1",
    "@typescript-eslint/parser": "~4.1.1",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "~14.2.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-import": "~2.22.0",
    "eslint-plugin-prettier": "~3.1.4",
    "husky": "~4.3.0",
    "lint-staged": "~10.4.0",
    "prettier": "~2.1.2",
    "typescript": "~4.0.3"
  }
}
