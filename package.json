{
  "name": "@sqrtthree/friday",
  "version": "1.4.0",
  "description": "Let every day be like Friday.",
  "main": "./dist/main.js",
  "types": "./index.d.ts",
  "bin": {
    "friday": "./dist/bin/friday.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "prebuild": "npm run lint",
    "build": "rm -r dist && tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "npm run type-check && eslint --ext ts ./src",
    "lint-with-fix": "eslint --ext ts --fix ./src",
    "type-check": "tsc --noEmit",
    "test": "jest -o ./dist",
    "test:cov": "jest --coverage ./dist",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqrthree/friday.git"
  },
  "author": "sqrtthree <imsqrtthree@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sqrthree/friday/issues"
  },
  "homepage": "https://github.com/sqrthree/friday#readme",
  "engines": {
    "node": ">=10"
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "dependencies": {
    "@koa/cors": "~3.1.0",
    "@koa/router": "~10.1.1",
    "@types/koa": "~2.13.4",
    "@types/koa-bodyparser": "~4.3.5",
    "@types/node": "~17.0.14",
    "ajv": "~8.10.0",
    "ajv-errors": "~3.0.0",
    "chalk": "~4.1.2",
    "config": "~3.3.7",
    "consola": "~2.15.3",
    "glob": "~7.2.0",
    "ip": "^1.1.5",
    "koa": "~2.13.4",
    "koa-bodyparser": "~4.3.0",
    "koa-helmet": "~6.1.0",
    "koa-static": "^5.0.0",
    "lodash": "~4.17.21",
    "pino": "~7.6.5",
    "pino-pretty": "~7.5.1",
    "pretty-error": "~4.0.0",
    "pretty-ms": "~7.0.1",
    "uuid": "~8.3.2",
    "validator": "~13.7.0",
    "yargs": "~17.3.1"
  },
  "devDependencies": {
    "@sqrtthree/eslint-config-ts": "~0.3.0",
    "@sqrtthree/prettier-config": "^2.0.1",
    "@sqrtthree/tsconfig": "~2.0.0",
    "@types/jest": "~27.4.0",
    "@types/lodash": "~4.14.178",
    "eslint": "~8.16.0",
    "husky": "~7.0.2",
    "jest": "~27.5.1",
    "lint-staged": "~11.1.4",
    "prettier": "~2.5.1",
    "typescript": "~4.5.5"
  }
}
