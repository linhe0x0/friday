{
  "name": "@sqrtthree/friday",
  "version": "1.0.0",
  "description": "Let every day be like Friday.",
  "main": "./dist/main.js",
  "types": "./index.d.ts",
  "scripts": {
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "prebuild": "npm run lint",
    "build": "rm -r dist && tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "npm run type-check && eslint --ext ts ./src",
    "lint-with-fix": "eslint --ext ts --fix ./src",
    "type-check": "tsc --noEmit",
    "test": "jest ./dist",
    "test:coverage": "jest --coverage ./dist",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqrthree/friday.git"
  },
  "author": "sqrtthree <imsqrtthree@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sqrthree/friday/issues"
  },
  "homepage": "https://github.com/sqrthree/friday#readme",
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "dependencies": {
    "@koa/cors": "~3.1.0",
    "@koa/router": "~10.0.0",
    "ajv": "~7.0.4",
    "ajv-errors": "~2.0.1",
    "chalk": "~4.1.1",
    "config": "~3.3.6",
    "consola": "~2.15.3",
    "glob": "~7.1.6",
    "ip": "^1.1.5",
    "koa": "~2.13.1",
    "koa-bodyparser": "~4.3.0",
    "koa-helmet": "~6.1.0",
    "koa-static": "^5.0.0",
    "lodash": "~4.17.21",
    "pino": "~6.11.3",
    "pino-pretty": "~4.7.1",
    "pretty-error": "~3.0.3",
    "pretty-ms": "~7.0.1",
    "uuid": "~8.3.2",
    "validator": "~13.5.2"
  },
  "devDependencies": {
    "@sqrtthree/prettier-config": "^2.0.1",
    "@types/jest": "~26.0.22",
    "@types/koa": "~2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/lodash": "~4.14.168",
    "@types/node": "~14.14.41",
    "@typescript-eslint/eslint-plugin": "~4.14.2",
    "@typescript-eslint/parser": "~4.14.2",
    "eslint": "~7.19.0",
    "eslint-config-airbnb-base": "~14.2.1",
    "eslint-config-prettier": "~7.2.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-prettier": "~3.3.1",
    "husky": "~4.3.8",
    "jest": "~26.6.3",
    "lint-staged": "~10.5.4",
    "prettier": "~2.2.1",
    "typescript": "~4.2.4"
  }
}
