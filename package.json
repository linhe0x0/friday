{
  "name": "@sqrtthree/friday",
  "version": "1.1.1",
  "description": "Let every day be like Friday.",
  "main": "./dist/main.js",
  "types": "./index.d.ts",
  "scripts": {
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "prebuild": "npm run lint",
    "build": "rm -r dist && tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "npm run type-check && eslint --ext ts ./src",
    "lint-with-fix": "eslint --ext ts --fix ./src",
    "type-check": "tsc --noEmit",
    "test": "npm run build && jest ./dist",
    "test:local": "jest -o ./dist",
    "test:cov": "jest --coverage ./dist",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqrthree/friday.git"
  },
  "author": "sqrtthree <imsqrtthree@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sqrthree/friday/issues"
  },
  "homepage": "https://github.com/sqrthree/friday#readme",
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "dependencies": {
    "@koa/cors": "~3.1.0",
    "@koa/router": "~10.0.0",
    "@types/koa": "~2.13.4",
    "@types/koa-bodyparser": "~4.3.2",
    "@types/node": "~16.3.3",
    "ajv": "~8.6.2",
    "ajv-errors": "~3.0.0",
    "chalk": "~4.1.1",
    "config": "~3.3.6",
    "consola": "~2.15.3",
    "glob": "~7.1.6",
    "ip": "^1.1.5",
    "koa": "~2.13.1",
    "koa-bodyparser": "~4.3.0",
    "koa-helmet": "~6.1.0",
    "koa-static": "^5.0.0",
    "lodash": "~4.17.21",
    "pino": "~6.12.0",
    "pino-pretty": "~5.1.2",
    "pretty-error": "~3.0.4",
    "pretty-ms": "~7.0.1",
    "uuid": "~8.3.2",
    "validator": "~13.6.0"
  },
  "devDependencies": {
    "@sqrtthree/eslint-config-ts": "~0.1.0",
    "@sqrtthree/prettier-config": "^2.0.1",
    "@types/jest": "~26.0.24",
    "@types/lodash": "~4.14.171",
    "@types/pino": "~6.3.9",
    "eslint": "~7.31.0",
    "husky": "~7.0.1",
    "jest": "~27.0.6",
    "lint-staged": "~11.0.1",
    "prettier": "~2.3.2",
    "typescript": "~4.3.5"
  }
}
