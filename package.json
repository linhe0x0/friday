{
  "name": "@sqrtthree/friday",
  "version": "0.7.0",
  "description": "Let every day be like Friday.",
  "main": "./dist/main.js",
  "bin": {
    "friday": "./dist/bin/friday.js",
    "friday-dev": "./dist/bin/friday-dev.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "prebuild": "npm run lint",
    "build": "rm -r dist && tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "npm run type-check && eslint --ext ts ./src",
    "lint-with-fix": "eslint --ext ts --fix ./src",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqrthree/friday.git"
  },
  "author": "sqrtthree <imsqrtthree@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sqrthree/friday/issues"
  },
  "homepage": "https://github.com/sqrthree/friday#readme",
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@koa/router": "^8.0.8",
    "ajv": "^6.12.0",
    "ajv-errors": "^1.0.1",
    "boxen": "^4.2.0",
    "chalk": "^2.4.2",
    "chokidar": "^3.3.1",
    "clipboardy": "^2.2.0",
    "config": "^3.3.0",
    "consola": "^2.11.3",
    "get-port": "^5.1.1",
    "ip": "^1.1.5",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^5.2.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.15",
    "pino": "^5.17.0",
    "pino-pretty": "^3.6.1",
    "pretty-error": "^2.1.1",
    "pretty-ms": "^5.1.0",
    "uuid": "^3.4.0",
    "yargs": "^14.2.3"
  },
  "devDependencies": {
    "@sqrtthree/prettier-config": "^1.0.0",
    "@types/koa": "^2.11.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.30",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  }
}
